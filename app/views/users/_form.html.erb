<%= form_with(model: user, local: true, class: "container") do |form| %>


	<div class="form-group">
 	 	<%= form.label :sex, 'Sex' %>  	
 	 	<%= form.select :sex, [ 'Male', 'Female' ], {prompt: 'Select One'}, { class: "form-control" } %>
  </div>

  <div class="form-group">
 	 	<%= form.label :age %>
  	<%= form.number_field :age, class: "form-control", id: "user_age", placeholder: "Enter age" %>
  </div>
  
  <div class="form-group">
  	<%= form.label :height, 'Height (in centimeters)' %>
  	<%= form.number_field :height, class: "form-control", id: "user_height", placeholder: "Enter height" %>
  </div>

  <div class="form-group">
  	<%= form.label :weight, 'Weight (in kilograms)' %>
  	<%= form.number_field :weight, class: "form-control", id: "user_weight", placeholder: "Enter weight" %>
  </div>
  <div class="form-group">
  	<%= form.label :lifestyle, 'Select the activity lifestyle that best describes your life' %>
  	<%= form.select :lifestyle, [ 'Sedentary','Lightly Active','Moderately Active', 'Very Active', 'Extra Active' ], {prompt: 'Select One'}, { class: "form-control" } %>
  </div>

  <div class="form-group text-center actions">
    <%= form.submit "Calculate", class: "btn btn-lg btn-secondary" %>
  </div>
<% end %>
